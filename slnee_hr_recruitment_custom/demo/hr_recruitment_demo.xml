<?xml version="1.0"?>
<odoo>
    <data noupdate="1">
        <record model="hr.recruitment.stage" id="hr_recruitment.stage_job1">
            <field name="name">Start Screening</field>
            <field name="state">draft</field>
            <field name="sequence">1</field>
        </record>
        <record model="hr.recruitment.stage" id="hr_recruitment.stage_job2">
            <field name="name">Initial Interview</field>
            <field name="state">open</field>
            <field name="sequence">2</field>
        </record>
        <record model="hr.recruitment.stage" id="hr_recruitment.stage_job3">
            <field name="name">HR</field>
            <field name="state">open</field>
            <field name="interview_required">True</field>
            <!-- <field name="survey_id" ref="candidate_assessment_form"/> -->
            <field name="sequence">3</field>
        </record>
        <record model="hr.recruitment.stage" id="hr_recruitment.stage_job4">
            <field name="name">Psychometric</field>
            <field name="state">open</field>
            <field name="sequence">4</field>
        </record>
        <record model="hr.recruitment.stage" id="hr_recruitment.stage_job5">
            <field name="name">Functional</field>
            <field name="state">open</field>
            <field name="sequence">5</field>
            <field name="fold" eval="False"/>
        </record>
        <record model="hr.recruitment.stage" id="hr_recruitment.stage_job6">
            <field name="name">HOF</field>
            <field name="state">open</field>
            <field name="sequence">6</field>
            <field name="fold" eval="False"/>
        </record>
        <record model="hr.recruitment.stage" id="stage_job7">
            <field name="name">Qualification check</field>
            <field name="state">verification</field>
            <field name="sequence">7</field>
        </record>
        <record model="hr.recruitment.stage" id="stage_job8">
            <field name="name">Hired</field>
            <field name="state">done</field>
            <field name="sequence">8</field>
            <field name="fold" eval="True" />
        </record>
        <record model="hr.recruitment.stage" id="stage_job9">
            <field name="name">Refuse</field>
            <field name="state">cancel</field>
            <field name="sequence">9</field>
            <field name="fold" eval="True" />
        </record>
    </data>
</odoo>