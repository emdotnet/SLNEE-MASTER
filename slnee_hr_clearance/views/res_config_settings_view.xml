<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form12" model="ir.ui.view">
        <field name="name">res.config.settings.exit.que.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr.res_config_settings_view_form"/>
        <field name="priority" eval="80"/>

        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')]" position="after">
                <div class="o_setting_box" title="chart on employee form">
                    <div class="o_setting_left_pane">
                        <label for="survey_id"/>
                        <field name="survey_id"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>