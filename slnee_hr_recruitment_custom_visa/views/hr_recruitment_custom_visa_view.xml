<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="hr_recruitment_custom_inherit_form">
        <field name="name">hr.recruitment.custom.inherit.form</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_test_survey']" position="after">
                <button name="processed_visa" type="object" string="View VISA Request"
                        class="oe_highlight" help="New Employee Visa Request" attrs="{'invisible':[('state','!=','done')]}"/>
            </xpath>
        </field>
    </record>
</odoo>